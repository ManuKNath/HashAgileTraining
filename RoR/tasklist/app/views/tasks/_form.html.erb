<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :taskname, style: "display: block" %>
    <%= form.text_field :taskname %>
  </div>

  <div>
    <%= form.label :duedate, style: "display: block" %>
    <%= form.date_field :duedate %>
  </div>

  <div>
    <% value={} %>
    <% User.all.each {|x| value[x.id] = x.firstname}%>
    <%= form.label :user, style: "display: block" %>
    <%= form.select :user_id, :Assignee => value.sort.map {|k,v| [v,k]} %>
  </div>


  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.check_box :status %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
