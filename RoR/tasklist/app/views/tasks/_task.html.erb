<div id="<%= dom_id task %>">
  <p>
    <strong>Taskname:</strong>
    <%= task.taskname %>
  </p>

  <p>
    <strong>Duedate:</strong>
    <%= task.duedate %>
  </p>

  <p>
    <strong>Assignee:</strong>
    <%= task.user_id %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= task.status ? "Completed" : "Pending" %>
  </p>

</div>
