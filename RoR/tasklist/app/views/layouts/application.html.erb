<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Todo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>
    <div>
      <p>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %>
        <% end %>
      </p>
      <% if user_signed_in? %>
        Logged in as <strong><%= current_user.email %></strong>.
        <%= link_to t('link.edit_profile'), edit_user_registration_path, :class => 'navbar-link' %> 
        <%= link_to t('link.user_list'), users_path, class:"navbar-link" %>
        <%= link_to t('link.task_list'), tasks_path,class:"navbar-link" %>
        <%= link_to t('link.new_task'), new_task_path,class:"navbar-link" %>
        <%= button_to t('link.sign_out'), destroy_user_session_path, method: :delete  %>
      <% end %>
      <%= yield %>
    </div>
    <div class="container-fluid m-auto">
      <br>
        <%= link_to "English", root_path(locale: :en)%> |
        <%= link_to "French", root_path(locale: :fr)%>
      <br>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  </body>
</html>
