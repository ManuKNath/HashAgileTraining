<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Todo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <body>
    <p>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    <% if login_signed_in? %>
      Logged in as <strong><%= current_login.email %></strong>.
      <%= link_to 'Edit profile', edit_login_registration_path, :class => 'navbar-link' %> 
      <%= link_to 'Users List', users_path, class:"navbar-link" %>
      <%= link_to 'Tasks List', tasks_path,class:"navbar-link" %>
      <%= link_to 'New Task', new_task_path,class:"navbar-link" %>
      <%= button_to "logout", destroy_login_session_path, method: :delete  %>
      <p class="alert alert-success"><%= notice %></p> 
    <% end %>
    <%= yield %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>
</html>
